		"@testing-library/user-event": "^14.6.1",
		"@types/bun": "latest",
		"@types/dompurify": "^3.2.0",
		"@types/react": "^19.2.9",
		"@types/react-dom": "^19.2.3",
		"@vitest/ui": "^4.0.18",
		"globals": "^17.1.0",
		"happy-dom": "^20.4.0",
		"jsdom": "^27.4.0",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript-eslint": "^8.53.1",
