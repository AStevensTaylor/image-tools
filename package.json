    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gifuct-js": "^2.1.2",
    "lucide-react": "^0.545.0",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.4.0",
    "wrangler": "^4.59.2"
